      <body class="text-center">
        
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <header class="masthead mb-auto">
        <div class="inner">
          <h3 class="masthead-brand">To Do List App</h3>
          <nav class="nav nav-masthead justify-content-center">
            <a class="nav-link active" href="/">Home</a>
            <a class="nav-link " href="/register">Register</a>
            <a class="nav-link" href="/login">Login</a>
          </nav>
        </div>
      </header>

    <body>
    <h1 class="display-5"><%= title %></h1>
    
    <div class="list-group">
      <% for( var i =0; i < newListItems.length; i++){ %>
        <form action="/delete" method="post">
        <label class="list-group-item d-flex gap-3">
          <input class="form-check-input flex-shrink-0" name="checkbox" type="checkbox" value= <%= newListItems[i]._id  %>  onchange="this.form.submit()" style="font-size: 1.375em;">
          <span class="pt-1 form-checked-content">
            <strong><%= newListItems[i].name %></strong>
            
            <input type="hidden" name="hiddenInput" value=<%= title %> >
          </span> 
        </label>
      </form>
        <% } %>
        <form class="item" action="/" method="post">
          <label class="list-group-item d-flex gap-3">
            <div class="input-group mb-1">
              <button type="submit" class="input-group-text" value=<%= title %> name="addButton">+</button>
              <input type="text" class="form-control" name="formInput" placeholder="Add a To-do" aria-label="Username" aria-describedby="basic-addon1">
            </div>
              <input type="hidden" name="hiddenInput" value=<%= title %> >
         
          </label>
        </form>
          <!-- <div class="input-group mb-3">
            
            <input type="text" class="form-control" aria-label="Text input with checkbox">
          </div> -->
      </div>
        
    






</body>

