<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="css/styles.css">

<body>
    <div class="box" id="heading">
        <h1> <%= title %></h1>
    </div>


    <div class="box" id="heading">

        <% for( var i =0; i < newListItems.length; i++){ %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value= <%= newListItems[i]._id  %>  onchange="this.form.submit()">
                <p> <%= newListItems[i].name %> </p>

            </div>
            <input type="hidden" name="hiddenInput" value=<%= title %> >
        </form>
        <% } %>
        <form class="item" action="/" method="post">
            <input type="text" name="formInput" autocomplete="off" placeholder="Something to add to to-do list">
            <button id="submitButton" type="submit" name="addButton" value=<%= title %>> +</button>

        </form>


    </div>






</body>

</html>